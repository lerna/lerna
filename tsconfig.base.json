{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2021",
    "module": "esnext",
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@lerna/bootstrap": ["packages/legacy-structure/commands/bootstrap/src/index.ts"],
      "@lerna/commands/add": ["libs/commands/add/src/index.ts"],
      "@lerna/commands/add/*": ["libs/commands/add/src/*"],
      "@lerna/commands/bootstrap": ["libs/commands/bootstrap/src/index.ts"],
      "@lerna/commands/bootstrap/*": ["libs/commands/bootstrap/src/*"],
      "@lerna/commands/changed": ["libs/commands/changed/src/index.ts"],
      "@lerna/commands/changed/*": ["libs/commands/changed/src/*"],
      "@lerna/commands/clean": ["libs/commands/clean/src/index.ts"],
      "@lerna/commands/clean/*": ["libs/commands/clean/src/*"],
      "@lerna/commands/create": ["libs/commands/create/src/index.ts"],
      "@lerna/commands/create/*": ["libs/commands/create/src/*"],
      "@lerna/commands/diff": ["libs/commands/diff/src/index.ts"],
      "@lerna/commands/diff/*": ["libs/commands/diff/src/*"],
      "@lerna/commands/exec": ["libs/commands/exec/src/index.ts"],
      "@lerna/commands/exec/*": ["libs/commands/exec/src/*"],
      "@lerna/commands/import": ["libs/commands/import/src/index.ts"],
      "@lerna/commands/import/*": ["libs/commands/import/src/*"],
      "@lerna/commands/info": ["libs/commands/info/src/index.ts"],
      "@lerna/commands/info/*": ["libs/commands/info/src/*"],
      "@lerna/commands/init": ["libs/commands/init/src/index.ts"],
      "@lerna/commands/init/*": ["libs/commands/init/src/*"],
      "@lerna/commands/link": ["libs/commands/link/src/index.ts"],
      "@lerna/commands/link/*": ["libs/commands/link/src/*"],
      "@lerna/commands/list": ["libs/commands/list/src/index.ts"],
      "@lerna/commands/list/*": ["libs/commands/list/src/*"],
      "@lerna/commands/publish": ["libs/commands/publish/src/index.ts"],
      "@lerna/commands/publish/*": ["libs/commands/publish/src/*"],
      "@lerna/commands/run": ["libs/commands/run/src/index.ts"],
      "@lerna/commands/run/*": ["libs/commands/run/src/*"],
      "@lerna/commands/version": ["libs/commands/version/src/index.ts"],
      "@lerna/commands/version/*": ["libs/commands/version/src/*"],
      "@lerna/core": ["libs/core/src/index.ts"],
      "@lerna/create": ["packages/legacy-structure/commands/create"],
      "@lerna/e2e-utils": ["libs/e2e-utils/src/index.ts"],
      "@lerna/nx-plugin": ["libs/nx-plugin/src/index.ts"],
      "@lerna/test-helpers": ["libs/test-helpers/src/index.ts"],
      "@lerna/test-helpers/*": ["libs/test-helpers/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
