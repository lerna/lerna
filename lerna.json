{
  "packages": [
    "commands/*",
    "core/*",
    "utils/*"
  ],
  "command": {
    "create": {
      "homepage": "https://github.com/lerna/lerna",
      "license": "MIT"
    },
    "publish": {
      "allowBranch": "master",
      "cdVersion": "prerelease",
      "conventionalCommits": true,
      "gitRemote": "upstream",
      "preid": "rc",
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "version": "3.0.0-beta.21"
}
